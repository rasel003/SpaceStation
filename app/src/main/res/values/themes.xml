<?xml version="1.0" encoding="utf-8"?>

<resources xmlns:tools="http://schemas.android.com/tools">

    <!--Final, top-level theme-->
    <style name="Theme.App.DayNight" parent="Theme.App" />

    <style name="Theme.App" parent="Theme.MaterialComponents.DayNight.NoActionBar">

        <!--Color-->
        <item name="colorPrimary">@color/teal_900</item>
        <item name="colorPrimaryVariant">@color/app_blue_800</item>
        <item name="colorSecondary">@color/pink_900</item>
        <item name="colorSecondaryVariant">@color/app_orange_400</item>

        <item name="android:colorBackground">@color/app_blue_50</item>
        <item name="colorSurface">@color/app_white_50</item>
        <item name="colorPrimarySurfaceVariant">?attr/colorPrimaryVariant</item>
        <item name="colorError">@color/app_red_400</item>

        <item name="android:textColor">?textColorDefault</item>
        <!--        <item name="android:textColorPrimary">@color/red</item>-->


        <item name="cardViewBorderColor">@color/app_white_50</item>
        <item name="textColorDefault">@color/black</item>
        <item name="chipSelectedStrokeColor">@color/app_white_50</item>
        <item name="chipSelectedBackgroundColor">@color/app_white_50</item>
        <item name="chipSelectedTextColor">@color/app_white_50</item>
        <item name="editTextBorderColor">@color/app_white_50</item>
        <item name="menuSurfaceColor">@color/app_white_50</item>
        <item name="selectedNavItemColor">@color/app_white_50</item>


        <item name="colorOnPrimary">@color/app_white_50</item>
        <item name="colorOnSecondary">@color/app_black_900</item>
        <item name="colorOnBackground">@color/app_black_900</item>
        <item name="colorOnSurface">@color/app_black_900</item>
        <item name="colorOnError">@color/app_black_900</item>

        <!--System/Platform attributes-->
        <item name="android:windowBackground">?android:colorBackground</item>
        <!--        <item name="android:windowLightStatusBar" tools:ignore="NewApi">true</item>-->
        <item name="scrimBackground">@color/app_white_50_alpha_060</item>
        <item name="android:statusBarColor">@color/teal_900</item>
        <item name="android:navigationBarColor">@color/nav_bar</item>

        <item name="android:windowLightStatusBar">false</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="27">
            @bool/use_light_system_bars
        </item>

        <!--Material shape attributes-->
        <item name="shapeAppearanceSmallComponent">@style/ShapeAppearance.App.SmallComponent</item>
        <item name="shapeAppearanceMediumComponent">@style/ShapeAppearance.App.MediumComponent
        </item>
        <item name="shapeAppearanceLargeComponent">@style/ShapeAppearance.App.LargeComponent</item>

        <!--Material type attributes-->
        <item name="textAppearanceHeadline2">@style/TextAppearance.App.Headline2</item>
        <item name="textAppearanceHeadline3">@style/TextAppearance.App.Headline3</item>
        <item name="textAppearanceHeadline4">@style/TextAppearance.App.Headline4</item>
        <item name="textAppearanceHeadline5">@style/TextAppearance.App.Headline5</item>
        <item name="textAppearanceHeadline6">@style/TextAppearance.App.Headline6</item>
        <item name="textAppearanceSubtitle1">@style/TextAppearance.App.Subtitle1</item>
        <item name="textAppearanceSubtitle2">@style/TextAppearance.App.Subtitle2</item>
        <item name="textAppearanceBody1">@style/TextAppearance.App.Body1</item>
        <item name="textAppearanceBody2">@style/TextAppearance.App.Body2</item>
        <item name="textAppearanceButton">@style/TextAppearance.App.Button</item>
        <item name="textAppearanceCaption">@style/TextAppearance.App.Caption</item>
        <item name="textAppearanceOverline">@style/TextAppearance.App.Overline</item>

        <item name="emphasisHighAlpha">0.87</item>
        <item name="emphasisMediumAlpha">0.60</item>
        <item name="emphasisDisabledAlpha">0.38</item>

        <item name="motionInterpolatorPersistent">@android:interpolator/fast_out_slow_in</item>
        <item name="motionInterpolatorIncoming">@android:interpolator/decelerate_cubic</item>
        <item name="motionInterpolatorOutgoing">@android:interpolator/accelerate_cubic</item>

        <!--Styles-->
        <item name="bottomAppBarStyle">
            @style/Widget.MaterialComponents.BottomAppBar.PrimarySurface
        </item>

        <item name="materialButtonStyle">@style/Widget.App.Button</item>
    </style>


</resources>